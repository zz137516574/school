<script>
    export default {
      props:{
        newsCommonData: {
          required: true
        }
      },
        data() {
            return {

            };
        },
        mounted() {

        },
        beforeDestroy() {

        },
        components: {

        },
        methods: {
          delHtmlTag(str){
            let bbq = str;
            if( bbq !== undefined){
              bbq = bbq.replace(/&lt;/g, '<');
              bbq = bbq.replace(/&gt;/g, '>');
              bbq = bbq.replace(/&nbsp;/g,'  ');
              bbq = bbq.replace(/&amp;/g,'&');
              bbq = bbq.replace(/&quot;/g,'"');
              bbq=bbq.replace("</*[^<>]*>", '');

              bbq=bbq.replace(" ", '');
              bbq=bbq.replace("::", ':');
              bbq=bbq.replace(" ", '');
              bbq=bbq.replace("<>", '');
              bbq=bbq.replace("</>", '');
              return bbq;
            }
          },
          newdata(itemId) {
            this.$emit('refre', itemId);
          }
        },
    };
</script>


