<template>
    <div class="newsLeftInfo">
        <div class="newsinfo">
            <p>热门资讯</p>
        </div>
        <ul class="clearfix">
            <li v-for="(item,index) in newsHotData" :key="index"  class="clearfix">
                <div class="f-fl newsinfoimgs"><img :src="item.newsTitlePhoto" alt=""></div>
                <p class="f-fl"  @click="newdata(item.newsId)">{{item.newsTitle}}</p>
            </li>
        </ul>
    </div>
</template>

<script>
  export default {
    data() {
      return {
        newsId:0,
        page: 1,
        limit:7,
        newsHotData:{}
      }
    },
    mounted() {
      this.hotInfos();
    },
    beforeDestroy() {

    },
    components: {

    },
    methods: {
      //  热门资讯
      hotInfos() {
        this.classId='';
        this.newsVisitNum='';
        this.newsAttribute='';
        this.service.newsLeftGroup(this.page, this.limit, this.classId, this.newsAttribute, this.newsVisitNum).then(result => {
          this.newsHotData = result.page.list;
        }).catch(error => {
          this.$Message.error({
            content: error,
            duration: 5
          });
        })
      },
      //  跳详情页
      newdata(newsId) {
        this.$emit('hotRefre', newsId);
      }
    }
  };

</script>

