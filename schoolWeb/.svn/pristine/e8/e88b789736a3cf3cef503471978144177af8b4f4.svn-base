                    loopedSlides:0,
//                    loop:true,
//                    loopedSlides:-1,
//                    prevButton: '.swiper-button-prev',
//                    nextButton: '.swiper-button-next'
                },
                swiperOptionThumbs: {
                  notNextTick: true,
                  spaceBetween: 10,
                  slidesPerView: 5,
                  centeredSlides: true,
                  prevButton: '.swiper-button-prev',
                  nextButton: '.swiper-button-next',
                  touchRatio: 0.2,
                  loop:true,
                  loopedSlides:0,
                  slideToClickedSlide:true
                }
            };
        },
        created(){
          this.schools();
        },
        mounted() {
            const swiperTop = this.$refs.swiperTop.swiper
            const swiperThumbs = this.$refs.swiperThumbs.swiper
            swiperTop.params.control = swiperThumbs
            swiperThumbs.params.control = swiperTop
        },
        beforeDestroy() {

        },
        components: {
            'v-top': top,
            'v-search': search,
            'v-subpageMenu': subpageMenu,
            'v-footer': footer,
            'v-aboutSchool': aboutSchool,
            swiper,
            swiperSlide,

        },
        computed: {
            swiper() {
                return this.$refs.mySwiper.swiper;
            }
        },
        methods: {
          schools(){
            this.service.aboutSchool(this.isFrozen,this.auditStatus,this.page,this.limit).then(result => {
              console.log(result);
              this.schoolData = result.page.list;
              this.swiperOptionTop.loopedSlides = result.page.list.length / 2;
              this.swiperOptionThumbs.loopedSlides = result.page.list.length / 2;
            }).catch(error => {
              this.$Loading.error();
            })
          },
          exchange (str) {
            let bbq = str;

            if(bbq!=undefined){
              bbq = bbq.replace(/&lt;/g, '<');
              bbq = bbq.replace(/&gt;/g, '>');
              bbq = bbq.replace(/&nbsp;/g,'  ');
              bbq = bbq.replace(/&amp;/g,'&');
              bbq = bbq.replace(/&quot;/g,'"');

              bbq=bbq.replace("</*[^<>]*>", '');
              bbq=bbq.replace(" ", '');
              bbq=bbq.replace("::", ':');
              bbq=bbq.replace(" ", '');
              bbq=bbq.replace("<>", '');
              bbq=bbq.replace("</>", '');
              return bbq;
            }
          }
        }
    };

